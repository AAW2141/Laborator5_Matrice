@{
    ViewBag.Title = "Matrice bidimensionala";
}
<div class="align-content-md-center">
    <h2>Matricea generata</h2>
</div>
<hr />
@{
    int[,] matrix = ViewBag.Matrix;
    int maxValue = ViewBag.MaxValue;
    int minValue = ViewBag.MinValue;
}

<table class="table-bordered">
    @for (int i=0; i<matrix.GetLength(0); i++)
    {
        <tr>
            @for (int j=0; j<matrix.GetLength(1); j++)
            {
                int value = matrix[i, j];
                bool isMax = (value == maxValue);
                bool isMin = (value == minValue);
                <td class="@(isMax? "max": (isMin ? "min":""))">@value</td>
            }
        </tr>
    }

</table>

